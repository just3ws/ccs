.actions
  %ul
    - if can?(:index, model)
      %li= link_to "Manage your #{model.class.to_s.pluralize}", polymorphic_path(model.class)

    - unless [:new].include? current_action
      - if can?(:create, model)
        %li= link_to "Create another #{model.class}", polymorphic_path(model.class, :action => "new")

    - unless [:new, :create, :index].include? current_action
      - if can?(:show, model)
        %li= link_to "View #{model.class.to_s}", polymorphic_path(model)
      - if can?(:update, model)
        %li= link_to "Edit this #{model.class}", polymorphic_path(model, :action => "edit")
      - if can?(:destroy, model)
        %li= link_to "Destroy this #{model.class}", model, :confirm => "Are you sure you wish to delete this #{model.class}?", :method => :delete
