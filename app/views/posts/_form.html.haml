= form_for(@post) do |f|
  - if @post.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@post.errors.count, 'error')} prohibited this user from being saved:"
      %ul
      - @post.errors.full_messages.each do |msg|
        %li= msg
  
  .field
    = f.label :title
    %br
    = f.text_field :title
  .field
    = f.label :text
    %br
    = f.text_area :text
  .field
    = f.label :permalink
    %br
    = f.text_field :permalink

  .actions
    = f.submit
